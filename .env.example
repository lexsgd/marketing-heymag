NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Stripe (Separate product catalog)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs (create these in Stripe Dashboard)
# Subscription Plans (recurring monthly)
STRIPE_LITE_PRICE_ID=price_xxx
STRIPE_STARTER_PRICE_ID=price_xxx
STRIPE_PRO_PRICE_ID=price_xxx
STRIPE_BUSINESS_PRICE_ID=price_xxx

# Credit Packs (one-time payments - premium pricing)
STRIPE_CREDITS_4_PRICE_ID=price_xxx
STRIPE_CREDITS_9_PRICE_ID=price_xxx
STRIPE_CREDITS_23_PRICE_ID=price_xxx
STRIPE_CREDITS_48_PRICE_ID=price_xxx

# AI Services
# Google Gemini (Nano Banana Pro) - Primary image enhancement
GOOGLE_AI_API_KEY=your_google_ai_key

# Anthropic Claude - Caption generation
ANTHROPIC_API_KEY=your_anthropic_key

# Background Removal
REMOVEBG_API_KEY=your_removebg_key

# Social Media Posting APIs
#
# Meta (Facebook + Instagram) - Direct Integration
# Create a Facebook App at https://developers.facebook.com/apps
# Required permissions: pages_show_list, pages_read_engagement, pages_manage_posts,
#                      instagram_basic, instagram_content_publish, business_management
# App must be in Live mode with Business Verification completed
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# TikTok (Coming Soon)
# TIKTOK_CLIENT_KEY=your_tiktok_client_key
# TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# KAWO or Just One API - Xiaohongshu, WeChat (Coming Soon)
# KAWO_API_KEY=your_kawo_key
# OR
# JUSTONEAPI_API_KEY=your_justoneapi_key

# Optional: Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXX
